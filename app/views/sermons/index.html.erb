<p id="notice"><%= notice %></p>

<h1>Sermons</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Speaker</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sermons.each do |sermon| %>
      <tr>
        <td><%= sermon.title %></td>
        <td><%= sermon.speaker %></td>
        <td><%= sermon.date %></td>
        <td><%= link_to 'Show', sermon %></td>
        <td><%= link_to 'Edit', edit_sermon_path(sermon) %></td>
        <td><%= link_to 'Destroy', sermon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

